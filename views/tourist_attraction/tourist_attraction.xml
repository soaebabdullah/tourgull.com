<odoo>

    <!-- Tree view of - as.tourist_attraction -->
    <record model="ir.ui.view" id="as_tourist_attraction_tree_id">
        <field name="name">Attraction</field>
        <field name="model">as.tourist_attraction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ta_name"/>
            </tree>
        </field>
    </record>


    <!-- Form view of - as.tourist_attraction -->
    <record model="ir.ui.view" id="as_tourist_attraction_form_id">
        <field name="name">Attraction</field>
        <field name="model">as.tourist_attraction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="ta_name"/>
                        </group>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="as_tourist_attraction_action">
        <field name="name">Attraction</field>
        <field name="res_model">as.tourist_attraction</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>