<odoo>
    <!-- Tree view of - as.security_service.request -->
    <record model="ir.ui.view" id="as_security_service_request_tree_id">
        <field name="name">Request</field>
        <field name="model">as.security_service.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="ss_name"/>
                <field name="ss_address"/>
                <field name="ss_service_address"/>
                <field name="ss_days"/>
                <field name="ss_peoples_count"/>
                <field name="ss_start_date"/>
                <field name="ss_end_date"/>
            </tree>
        </field>
    </record>


    <!-- Form view of - as.security_service.request -->
    <record model="ir.ui.view" id="as_security_service_request_form_id">
        <field name="name">Request</field>
        <field name="model">as.security_service.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="ss_name"/>
                            <field name="ss_address"/>
                            <field name="ss_service_address"/>
                            <field name="ss_days"/>
                            <field name="ss_peoples_count"/>
                            <field name="ss_start_date"/>
                            <field name="ss_end_date"/>
                        </group>
                        <group></group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="as_security_service_request_action">
        <field name="name">Request</field>
        <field name="res_model">as.security_service.request</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>